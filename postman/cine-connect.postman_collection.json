          "raw": "{\n  \"operationName\": \"GetMovie\",\n  \"query\": \"query GetMovie($movieId: ID!) {\\n  getMovie(movieId: $movieId) {\\n    movieId\\n    title\\n    synopsis\\n    releaseDate\\n    durationMinutes\\n    genre\\n    language\\n    posterUrl\\n    createdAt\\n  }\\n}\",\n  \"variables\": {\n    \"movieId\": \"{{movieId}}\"\n  }\n}"
