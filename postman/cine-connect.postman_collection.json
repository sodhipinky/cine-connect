          "raw": "{\n  \"operationName\": \"CreateMovie\",\n  \"query\": \"mutation CreateMovie($movie: MovieInput!) {\\n  createMovie(movie: $movie) {\\n    movieId\\n    title\\n    releaseDate\\n    durationMinutes\\n    genre\\n  }\\n}\",\n  \"variables\": {\n    \"movie\": {\n      \"movieId\": \"{{newMovieId}}\",\n      \"title\": \"{{newMovieTitle}}\",\n      \"synopsis\": \"{{newMovieSynopsis}}\",\n      \"releaseDate\": \"{{newMovieReleaseDate}}\",\n      \"durationMinutes\": {{newMovieDurationMinutes}},\n      \"genre\": \"{{newMovieGenre}}\",\n      \"language\": \"{{newMovieLanguage}}\",\n      \"posterUrl\": \"{{newMoviePosterUrl}}\",\n      \"createdAt\": \"{{newMovieCreatedAt}}\"\n    }\n  }\n}"
